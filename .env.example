# Primary Cell Assessment Application - Environment Variables
# Copy this file to .env and update with your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
VITE_APP_TITLE=Primary Cell Assessment
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# =============================================================================
# API CONFIGURATION (REQUIRED)
# =============================================================================
# Emergent.sh API base URL
# Production: https://your-app.emergent.sh
# Development: http://localhost:8000
VITE_API_BASE_URL=https://api.primarycell.com

# API request timeout in milliseconds (default: 30000ms = 30 seconds)
VITE_API_TIMEOUT=30000

# =============================================================================
# VIDEO CONFIGURATION
# =============================================================================
# YouTube video IDs for embedded videos
# Format: YouTube video ID only (not full URL)
# Example: dQw4w9WgXcQ from https://www.youtube.com/watch?v=dQw4w9WgXcQ

# Highlights video - Overview of Primary Cell therapy benefits
VITE_VIDEO_HIGHLIGHTS_ID=dQw4w9WgXcQ

# Demo video - Demonstration of treatment process
VITE_VIDEO_DEMO_ID=dQw4w9WgXcQ

# Final video - Patient testimonials and results (Page 14: FinalVideoPage)
# 7-minute deep dive on cellular pain mechanisms
VITE_VIDEO_FINAL_ID=dQw4w9WgXcQ

# =============================================================================
# EXTERNAL LINKS (REQUIRED)
# =============================================================================
# Calendly scheduling URL for discovery call booking (Page 14: FinalVideoPage)
# Example: https://calendly.com/your-team/discovery-call
VITE_CALENDLY_URL=https://calendly.com/primarycell/discovery-call

# Privacy policy URL
# Example: https://primarycell.com/privacy-policy
VITE_PRIVACY_POLICY_URL=

# Terms of service URL (optional)
VITE_TERMS_OF_SERVICE_URL=

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable Google Analytics or other analytics platforms
VITE_ENABLE_ANALYTICS=false

# Enable debug mode (verbose console logging - DEV ONLY)
VITE_ENABLE_DEBUG_MODE=false

# Enable auto-save of assessment progress
VITE_ENABLE_AUTO_SAVE=true

# Auto-save interval in seconds (default: 30 seconds)
VITE_AUTO_SAVE_INTERVAL=30

# Enable email results functionality
VITE_ENABLE_EMAIL_RESULTS=true

# Enable waiting list for disqualified leads
VITE_ENABLE_WAITING_LIST=true

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
# Session timeout in milliseconds (default: 1800000ms = 30 minutes)
VITE_SESSION_TIMEOUT=1800000

# Enable session persistence (save progress to localStorage)
VITE_ENABLE_SESSION_PERSISTENCE=true

# Maximum assessment duration in minutes (default: 60 minutes)
VITE_MAX_ASSESSMENT_DURATION=60

# =============================================================================
# CONTACT INFORMATION
# =============================================================================
# Support contact information displayed in the app
VITE_CONTACT_EMAIL=support@primarycell.com
VITE_CONTACT_PHONE=1-800-PRIMARY

# =============================================================================
# EMERGENT.SH DEPLOYMENT (Auto-populated by Emergent.sh)
# =============================================================================
# These variables are automatically set by Emergent.sh during deployment
# DO NOT manually set these in production
VITE_DEPLOY_URL=
VITE_DEPLOY_BRANCH=
VITE_DEPLOY_COMMIT_SHA=

# =============================================================================
# OPTIONAL: THIRD-PARTY INTEGRATIONS
# =============================================================================
# Google Analytics Measurement ID (if VITE_ENABLE_ANALYTICS=true)
VITE_GA_MEASUREMENT_ID=

# Sentry DSN for error tracking (optional)
VITE_SENTRY_DSN=

# Sentry environment name (optional)
VITE_SENTRY_ENVIRONMENT=development

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Mock API responses (for local development without backend)
VITE_USE_MOCK_API=false

# Show development tools (component explorer, state inspector, etc.)
VITE_SHOW_DEV_TOOLS=false
