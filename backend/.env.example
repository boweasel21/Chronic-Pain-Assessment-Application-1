# Backend API Environment Variables
# Copy this file to .env and update with your actual values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
ENVIRONMENT=development
APP_NAME=Primary Cell Assessment API
VERSION=1.0.0

# ============================================================================
# DATABASE (REQUIRED)
# ============================================================================
# MongoDB connection string
# Development: mongodb://localhost:27017
# Production: mongodb+srv://username:password@cluster.mongodb.net
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=primary_cell_assessment

# ============================================================================
# CORS SETTINGS
# ============================================================================
# Comma-separated list of additional allowed origins
# The defaults (localhost:5173, primarycell.com) are already included
CORS_ORIGINS=

# ============================================================================
# EMAIL PROVIDER (REQUIRED for email functionality)
# ============================================================================
# Email provider: 'sendgrid' or 'aws-ses'
EMAIL_PROVIDER=sendgrid

# SendGrid Configuration
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@primarycell.com
SENDGRID_FROM_NAME=Primary Cell Assessment
RESULTS_EMAIL_TEMPLATE_ID=

# AWS SES Configuration (alternative to SendGrid)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=true

# Rate limits (requests per 15 minutes per IP)
RATE_LIMIT_SUBMIT_ASSESSMENT=5
RATE_LIMIT_SAVE_PROGRESS=30
RATE_LIMIT_SEND_EMAIL=3
RATE_LIMIT_HEALTH=100

# ============================================================================
# SECURITY
# ============================================================================
# API keys for programmatic access (comma-separated)
# Leave empty for public API
API_KEYS=

# Maximum request body size in bytes (default: 1MB)
MAX_REQUEST_SIZE=1048576

# ============================================================================
# LOGGING & MONITORING
# ============================================================================
LOG_LEVEL=INFO

# Sentry DSN for error tracking (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_EMAIL_RESULTS=true
ENABLE_AUTO_SAVE=true

# ============================================================================
# REDIS (Optional - for production rate limiting)
# ============================================================================
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379

# ============================================================================
# CRM INTEGRATION (Optional)
# ============================================================================
CRM_ENABLED=false
CRM_PROVIDER=
CRM_API_KEY=
CRM_API_URL=
