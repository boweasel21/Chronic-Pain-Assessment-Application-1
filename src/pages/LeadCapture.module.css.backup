/**
 * LeadCapture Page Styles
 * Contact form with validation states and animations
 */

.container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24px;
  background: linear-gradient(135deg, rgba(226, 211, 163, 0.1) 0%, rgba(255, 255, 255, 1) 100%);
}

.content {
  width: 100%;
  max-width: 600px;
  margin: 0 auto;
}

/* Header Section */
.header {
  text-align: center;
  margin-bottom: 24px;
}

.headline {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: clamp(2rem, 5vw, 2.5rem);
  font-weight: 700;
  color: rgba(29, 44, 73, 1);
  margin: 0 0 12px 0;
  line-height: 1.2;
}

.subtext {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: clamp(1.125rem, 3vw, 1.5rem);
  font-weight: 500;
  color: rgba(226, 211, 163, 1);
  margin: 0;
  line-height: 1.4;
}

.introduction {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: clamp(1rem, 2.5vw, 1.125rem);
  color: rgba(55, 65, 81, 1);
  text-align: center;
  margin: 0 0 32px 0;
  line-height: 1.6;
}

/* Form Section */
.form {
  background: white;
  border-radius: 12px;
  padding: 32px;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
}

.formField {
  margin-bottom: 24px;
}

.label {
  display: block;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: 14px;
  font-weight: 600;
  color: rgba(29, 44, 73, 1);
  margin-bottom: 8px;
}

.required {
  color: #EF4444;
  margin-left: 4px;
}

.input {
  width: 100%;
  padding: 12px 16px;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: 16px;
  color: rgba(29, 44, 73, 1);
  background: white;
  border: 2px solid rgba(229, 231, 235, 1);
  border-radius: 8px;
  transition: all 0.2s ease;
  outline: none;
  box-sizing: border-box;
}

.input:focus {
  border-color: rgba(29, 44, 73, 1);
  box-shadow: 0 0 0 3px rgba(29, 44, 73, 0.1);
}

.input::placeholder {
  color: rgba(156, 163, 175, 1);
}

.input:disabled {
  background: rgba(249, 250, 251, 1);
  cursor: not-allowed;
  opacity: 0.6;
}

.inputError {
  border-color: #EF4444;
}

.inputError:focus {
  border-color: #EF4444;
  box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1);
}

/* Error Message */
.errorMessage {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-top: 8px;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: 14px;
  color: #EF4444;
}

.errorIcon {
  flex-shrink: 0;
}

/* Privacy Notice */
.privacyNotice {
  display: flex;
  align-items: flex-start;
  gap: 12px;
  padding: 16px;
  background: rgba(226, 211, 163, 0.1);
  border-radius: 8px;
  margin-bottom: 24px;
}

.lockIcon {
  flex-shrink: 0;
  color: rgba(29, 44, 73, 1);
  margin-top: 2px;
}

.privacyText {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: 14px;
  color: rgba(55, 65, 81, 1);
  margin: 0;
  line-height: 1.5;
}

.privacyLink {
  color: rgba(29, 44, 73, 1);
  text-decoration: underline;
  font-weight: 600;
  transition: color 0.2s ease;
}

.privacyLink:hover {
  color: rgba(226, 211, 163, 1);
}

.privacyLink:focus-visible {
  outline: 2px solid rgba(226, 211, 163, 1);
  outline-offset: 2px;
  border-radius: 2px;
}

/* Submit Section */
.submitSection {
  min-height: 120px;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Loading State */
.loadingContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24px;
}

/* Success State */
.successContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24px;
  gap: 16px;
}

.successIcon {
  width: 64px;
  height: 64px;
}

.successText {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: 18px;
  font-weight: 600;
  color: #10B981;
  margin: 0;
}

/* Error State */
.errorContainer {
  padding: 16px;
  background: rgba(239, 68, 68, 0.1);
  border: 2px solid #EF4444;
  border-radius: 8px;
}

.errorText {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: 14px;
  font-weight: 600;
  color: #EF4444;
  margin: 0;
  text-align: center;
}

/* Screen reader only text */
.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

/* Responsive Adjustments */

/* Mobile (320px - 640px) */
@media (max-width: 640px) {
  .container {
    padding: 16px;
  }

  .form {
    padding: 24px 16px;
  }

  .headline {
    font-size: 1.75rem;
  }

  .subtext {
    font-size: 1.125rem;
  }

  .introduction {
    font-size: 1rem;
    margin-bottom: 24px;
  }

  .formField {
    margin-bottom: 20px;
  }

  .input {
    font-size: 16px; /* Prevent iOS zoom on focus */
  }
}

/* Tablet (641px - 1024px) */
@media (min-width: 641px) and (max-width: 1024px) {
  .container {
    padding: 32px;
  }

  .content {
    max-width: 560px;
  }
}

/* Desktop (1025px+) */
@media (min-width: 1025px) {
  .container {
    padding: 48px;
  }

  .content {
    max-width: 600px;
  }

  .form {
    padding: 40px;
  }

  .input:hover:not(:disabled) {
    border-color: rgba(29, 44, 73, 0.5);
  }
}

/* High Contrast Mode */
@media (prefers-contrast: high) {
  .input {
    border-width: 3px;
  }

  .input:focus {
    outline: 3px solid rgba(29, 44, 73, 1);
    outline-offset: 2px;
  }

  .privacyLink:focus-visible {
    outline-width: 3px;
  }
}

/* Reduced Motion */
@media (prefers-reduced-motion: reduce) {
  .input,
  .privacyLink {
    transition: none;
  }
}

/* Print Styles */
@media print {
  .container {
    background: white;
  }

  .form {
    box-shadow: none;
    border: 2px solid rgba(29, 44, 73, 1);
  }

  .submitSection {
    display: none;
  }
}

/* Focus visible support for keyboard navigation */
.input:focus-visible {
  outline: 3px solid rgba(226, 211, 163, 1);
  outline-offset: 2px;
}

/* Touch device optimizations */
@media (hover: none) and (pointer: coarse) {
  .input {
    min-height: 48px;
    font-size: 16px;
  }

  .label {
    font-size: 16px;
  }
}
