/**
 * FinalVideoPage Styles
 * Congratulations page with confetti, video, and FAQ
 */

.container {
  min-height: 100vh;
  padding: 24px;
  background: linear-gradient(135deg, rgba(226, 211, 163, 0.1) 0%, rgba(255, 255, 255, 1) 100%);
  position: relative;
  overflow: hidden;
}

.content {
  max-width: 1200px;
  margin: 0 auto;
  position: relative;
  z-index: 1;
}

/* Confetti Animation */
.confettiContainer {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 999;
  overflow: hidden;
}

.confettiParticle {
  position: absolute;
  width: 10px;
  height: 10px;
  border-radius: 2px;
}

/* Congratulations Section */
.congratsSection {
  text-align: center;
  padding: 48px 0 32px 0;
}

.successBadge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24px;
}

.successIcon {
  width: 64px;
  height: 64px;
}

.headline {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: clamp(2rem, 5vw, 3rem);
  font-weight: 700;
  color: rgba(29, 44, 73, 1);
  margin: 0 0 16px 0;
  line-height: 1.2;
}

.message {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: clamp(1.125rem, 3vw, 1.5rem);
  font-weight: 500;
  color: rgba(107, 114, 128, 1);
  margin: 0;
  line-height: 1.4;
}

/* Section Headings */
.sectionHeading {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: clamp(1.5rem, 4vw, 2rem);
  font-weight: 700;
  color: rgba(29, 44, 73, 1);
  margin: 0 0 24px 0;
  text-align: center;
  line-height: 1.3;
}

/* Booking Section */
.bookingSection {
  margin-bottom: 48px;
}

.cardHeading {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: clamp(1.25rem, 3vw, 1.5rem);
  font-weight: 700;
  color: rgba(29, 44, 73, 1);
  margin: 0 0 24px 0;
  line-height: 1.3;
}

.detailsGrid {
  display: grid;
  gap: 20px;
  margin-bottom: 24px;
}

.detailItem {
  display: flex;
  gap: 16px;
  align-items: flex-start;
}

.detailIcon {
  flex-shrink: 0;
  color: rgba(29, 44, 73, 1);
  margin-top: 2px;
}

.detailLabel {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: 14px;
  font-weight: 600;
  color: rgba(107, 114, 128, 1);
  margin: 0 0 4px 0;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.detailValue {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: 16px;
  font-weight: 500;
  color: rgba(29, 44, 73, 1);
  margin: 0;
  line-height: 1.5;
}

.calendarButton {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 12px 24px;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: 16px;
  font-weight: 600;
  color: rgba(29, 44, 73, 1);
  background: rgba(226, 211, 163, 0.2);
  border: 2px solid rgba(226, 211, 163, 1);
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.2s ease;
  text-decoration: none;
}

.calendarButton:hover {
  background: rgba(226, 211, 163, 0.4);
  transform: translateY(-2px);
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
}

.calendarButton:active {
  transform: translateY(0);
}

.calendarButton:focus-visible {
  outline: 3px solid rgba(226, 211, 163, 1);
  outline-offset: 2px;
}

/* Bonus Section */
.bonusSection {
  margin-bottom: 48px;
}

.videoWrapper {
  position: relative;
  padding-bottom: 56.25%; /* 16:9 aspect ratio */
  height: 0;
  overflow: hidden;
  border-radius: 8px;
  margin-bottom: 16px;
}

.videoEmbed {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border: none;
  border-radius: 8px;
}

.videoDescription {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: 14px;
  color: rgba(107, 114, 128, 1);
  margin: 0;
  text-align: center;
  line-height: 1.5;
}

/* What to Expect Section */
.expectSection {
  margin-bottom: 48px;
}

.expectGrid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 24px;
}

.expectCard {
  text-align: center;
}

.expectIcon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 64px;
  height: 64px;
  margin: 0 auto 16px;
  background: rgba(226, 211, 163, 0.2);
  border-radius: 50%;
  color: rgba(29, 44, 73, 1);
}

.expectTitle {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: clamp(1rem, 2.5vw, 1.125rem);
  font-weight: 700;
  color: rgba(29, 44, 73, 1);
  margin: 0 0 12px 0;
  line-height: 1.3;
}

.expectText {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: 14px;
  color: rgba(55, 65, 81, 1);
  margin: 0;
  line-height: 1.6;
}

/* FAQ Section */
.faqSection {
  margin-bottom: 48px;
}

.faqList {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.faqCard {
  overflow: hidden;
}

.faqButton {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16px;
  padding: 0;
  background: none;
  border: none;
  cursor: pointer;
  text-align: left;
  transition: opacity 0.2s ease;
}

.faqButton:hover {
  opacity: 0.8;
}

.faqButton:focus-visible {
  outline: 3px solid rgba(226, 211, 163, 1);
  outline-offset: 2px;
  border-radius: 4px;
}

.faqQuestion {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: clamp(1rem, 2.5vw, 1.125rem);
  font-weight: 600;
  color: rgba(29, 44, 73, 1);
  line-height: 1.4;
}

.faqIcon {
  flex-shrink: 0;
  color: rgba(29, 44, 73, 1);
}

.faqAnswer {
  overflow: hidden;
}

.faqAnswerText {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: 14px;
  color: rgba(55, 65, 81, 1);
  margin: 16px 0 0 0;
  line-height: 1.6;
  padding-top: 16px;
  border-top: 1px solid rgba(229, 231, 235, 1);
}

/* CTA Section */
.ctaSection {
  margin-bottom: 48px;
}

.ctaCard {
  text-align: center;
}

.ctaHeading {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: clamp(1.5rem, 4vw, 2rem);
  font-weight: 700;
  color: white;
  margin: 0 0 16px 0;
  line-height: 1.3;
}

.ctaText {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: clamp(1rem, 2.5vw, 1.125rem);
  color: rgba(255, 255, 255, 0.9);
  margin: 0 0 24px 0;
  line-height: 1.6;
}

/* Responsive Adjustments */

/* Mobile (320px - 640px) */
@media (max-width: 640px) {
  .container {
    padding: 16px;
  }

  .congratsSection {
    padding: 32px 0 24px 0;
  }

  .successIcon {
    width: 48px;
    height: 48px;
  }

  .headline {
    font-size: 1.75rem;
  }

  .message {
    font-size: 1.125rem;
  }

  .sectionHeading {
    font-size: 1.5rem;
    margin-bottom: 20px;
  }

  .bookingSection,
  .bonusSection,
  .expectSection,
  .faqSection,
  .ctaSection {
    margin-bottom: 32px;
  }

  .detailsGrid {
    gap: 16px;
  }

  .expectGrid {
    grid-template-columns: 1fr;
    gap: 16px;
  }

  .expectIcon {
    width: 56px;
    height: 56px;
  }

  .faqList {
    gap: 12px;
  }
}

/* Tablet (641px - 1024px) */
@media (min-width: 641px) and (max-width: 1024px) {
  .container {
    padding: 32px;
  }

  .expectGrid {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* Desktop (1025px+) */
@media (min-width: 1025px) {
  .container {
    padding: 48px;
  }

  .congratsSection {
    padding: 64px 0 48px 0;
  }

  .detailsGrid {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* High Contrast Mode */
@media (prefers-contrast: high) {
  .calendarButton {
    border-width: 3px;
  }

  .faqButton:focus-visible {
    outline-width: 4px;
  }
}

/* Reduced Motion */
@media (prefers-reduced-motion: reduce) {
  .confettiParticle,
  .calendarButton,
  .faqButton {
    animation: none;
    transition: none;
  }

  .successIcon,
  .faqIcon {
    transition: none;
  }
}

/* Print Styles */
@media print {
  .container {
    background: white;
  }

  .confettiContainer {
    display: none;
  }

  .videoWrapper {
    display: none;
  }

  .calendarButton {
    border: 2px solid rgba(29, 44, 73, 1);
    background: transparent;
    color: rgba(29, 44, 73, 1);
  }

  .ctaCard {
    background: white;
    color: rgba(29, 44, 73, 1);
  }

  .ctaHeading,
  .ctaText {
    color: rgba(29, 44, 73, 1);
  }
}

/* Focus visible support */
.faqButton:focus-visible,
.calendarButton:focus-visible {
  outline: 3px solid rgba(226, 211, 163, 1);
  outline-offset: 2px;
  border-radius: 4px;
}

/* Touch device optimizations */
@media (hover: none) and (pointer: coarse) {
  .calendarButton,
  .faqButton {
    min-height: 48px;
  }

  .faqButton {
    padding: 12px 0;
  }
}

/* Dark mode support (future enhancement) */
@media (prefers-color-scheme: dark) {
  .container {
    background: linear-gradient(135deg, rgba(29, 44, 73, 0.2) 0%, rgba(17, 24, 39, 1) 100%);
  }

  .headline,
  .sectionHeading,
  .cardHeading,
  .detailValue,
  .faqQuestion {
    color: rgba(255, 255, 255, 0.95);
  }

  .message,
  .detailLabel,
  .videoDescription,
  .expectText,
  .faqAnswerText {
    color: rgba(255, 255, 255, 0.7);
  }
}
